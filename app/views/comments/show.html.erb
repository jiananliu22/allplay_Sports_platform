<div class="page-header">
  <%= link_to comments_path, class: 'button' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_comment_path(@comment), class: 'button' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show comment</h1>
</div>

<dl class="dl-horizontal">
  <dt>Spot:</dt>
  <dd><%= @comment.spot_id %></dd>

  <dt>Body:</dt>
  <dd><%= @comment.body %></dd>

</dl>
