<%= div_for(comment) do %>
  <p>
    <strong>Posted by <%= comment.user.username %></strong></br>
    <em><%= time_ago_in_words(comment.created_at) %> ago</em></br>
    <%= comment.body %>
  </p>
  <p>
     <% if current_user.id == comment.user.id %>
      <%= button_to 'Delete', [comment.spot, comment],
                :method => :delete,
                data: { confirm: 'Are you sure?' },
                class: 'button alert'
                %>
    <% end %>
  </p>
<% end %>
